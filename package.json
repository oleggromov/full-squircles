{
  "name": "full-squircles",
  "version": "0.9.2",
  "description": "Squircles implemented with CSS Painting API that allow using border and background",

  "source": "src/squircles.ts",
  "main": "dist/lib/squircles.js",

  "scripts": {
    "dev": "npx parcel",
    "build": "rm -rf ./dist && npx parcel build --no-cache --dist-dir ./dist --target lib --no-source-maps"
  },

  "targets": {
    "dev": {
      "source": "dev/index.html"
    },
    "lib": {
      "source": "src/squircles.ts"
    }
  },

  "author": "Oleg Gromov <hi@oleggromov.com>",
  "license": "MIT",

  "devDependencies": {
    "parcel": "^2.12.0"
  }
}
